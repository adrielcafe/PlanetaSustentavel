<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adrielcafe.planetasustentavel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GreenTheme" >
        <activity
            android:name="com.adrielcafe.planetasustentavel.SplashScreenActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:icon="@drawable/ic_launcher_white"
            android:name="com.adrielcafe.planetasustentavel.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:icon="@drawable/ic_launcher_white"
            android:name="com.adrielcafe.planetasustentavel.CategoryActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.adrielcafe.planetasustentavel.MainActivity" >
        </activity>
    </application>

</manifest>